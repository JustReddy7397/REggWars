<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>ga.justreddy.wiki</groupId>
        <artifactId>parent</artifactId>
        <version>1.0</version>
    </parent>

    <artifactId>dist</artifactId>

    <properties>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencies>
        <!-- Version Specific -->
        <dependency>
            <groupId>ga.justreddy.wiki.reggwars.nms</groupId>
            <artifactId>v1_8_R3</artifactId>
            <version>1.0</version>
        </dependency>

        <!-- API -->
        <dependency>
            <groupId>ga.justreddy.wiki.reggwars</groupId>
            <artifactId>REggWars-API</artifactId>
            <version>1.0</version>
        </dependency>

        <!-- plugin -->
        <dependency>
            <groupId>ga.justreddy.wiki.reggwars</groupId>
            <artifactId>REggWars</artifactId>
            <version>1.0.0</version>
        </dependency>

    </dependencies>

    <build>
        <directory>../target</directory>
        <finalName>REggWars-1.0.0</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.2.4</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <relocations>
                                <relocation>
                                    <pattern>com.alessiodp.libby</pattern>
                                    <shadedPattern>ga.justreddy.wiki.reggwars.libs.com.alessiodp.libby</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>dev.demeng.sentinel.wrapper</pattern>
                                    <shadedPattern>ga.justreddy.wiki.reggwars.libs.dev.demeng.sentinel.wrapper</shadedPattern>
                                </relocation>
                            </relocations>
                            <createDependencyReducedPom>false</createDependencyReducedPom>
                            <filters>
                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/maven/**</exclude>
                                    </excludes>
                                </filter>
                            </filters>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <targetPath>.</targetPath>
                <filtering>true</filtering>
                <directory>../plugin/src/main/resources</directory>
                <includes>
                    <include>plugin.yml</include>
                </includes>
            </resource>
        </resources>
    </build>

</project>